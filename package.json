{
  "name": "mev-resistant-dex-infrastructure",
  "version": "1.0.0",
  "description": "High-frequency MEV-resistant decentralized exchange with fiat onramps",
  "private": true,
  "scripts": {
    "dev": "concurrently \"npm:dev:*\"",
    "dev:api": "ts-node-dev --respawn --transpile-only api/order-api.ts",
    "dev:websocket": "ts-node-dev --respawn --transpile-only api/websocket-feed.ts",
    "dev:metrics": "ts-node-dev --respawn --transpile-only monitoring/prometheus-exporter.ts",
    "dev:alerting": "ts-node-dev --respawn --transpile-only monitoring/alerting.ts",
    "build": "npm run build:contracts && npm run build:sequencer && npm run build:frontend",
    "build:contracts": "hardhat compile",
    "build:sequencer": "cd zk-rollup-core/sequencer && cargo build --release",
    "build:frontend": "cd exchange-front-ui && npm run build",
    "test": "npm run test:contracts && npm run test:integration",
    "test:contracts": "hardhat test",
    "test:integration": "jest --config jest.config.js",
    "test:benchmark": "ts-node trade-simulation-tests/benchmarks/latency_test.ts",
    "test:mev": "ts-node trade-simulation-tests/scenarios/market_maker_simulation.ts",
    "audit": "python formal-audit-reports/verify.py encrypted-orderflow/contracts",
    "deploy": "hardhat run scripts/deploy.ts --network localhost",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "docker:restart": "docker-compose restart",
    "docker:clean": "docker-compose down -v",
    "lint": "eslint . --ext .ts,.tsx --fix",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "start:api": "node dist/api/order-api.js",
    "start:websocket": "node dist/api/websocket-feed.js",
    "start:metrics": "node dist/monitoring/prometheus-exporter.js",
    "start:alerting": "node dist/monitoring/alerting.js"
  },
  "dependencies": {
    "@noble/bls12-381": "^1.4.0",
    "@openzeppelin/contracts": "^5.0.0",
    "axios": "^1.6.0",
    "cors": "^2.8.5",
    "ethers": "^6.9.0",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "ioredis": "^5.3.2",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "pg": "^8.11.3",
    "prom-client": "^15.1.0",
    "socket.io": "^4.6.1",
    "socket.io-client": "^4.6.1",
    "@mongodb-js/zstd": "^1.2.0"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^4.0.0",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.11",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.10.6",
    "@types/pg": "^8.10.9",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "@typescript-eslint/parser": "^6.17.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.56.0",
    "hardhat": "^2.19.4",
    "jest": "^29.7.0",
    "prettier": "^3.1.1",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/djmistretta15/-DEX-INFRASTRUCTURE-HFT-PROTECTION-LAYER"
  },
  "keywords": [
    "dex",
    "mev",
    "high-frequency-trading",
    "blockchain",
    "ethereum",
    "defi",
    "trading",
    "orderbook",
    "zk-rollup"
  ],
  "author": "DEX Infrastructure Team",
  "license": "MIT"
}
